<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_form_inherit_product_template">
            <field name="name">product.template.form.inherit.product.template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">

                <!-- Add `pairs_per_case` and `price_per_pair` fields to form view. -->
                <xpath expr="//group[@name='group_standard_price']/*[1]" position="before">
                    <field name="pairs_per_case"
                        attrs="{'invisible': [('detailed_type', '!=', 'shoes')]}" />
                    <field name="price_per_pair"
                        attrs="{'invisible': [('detailed_type', '!=', 'shoes')]}" />
                </xpath>

                <!-- Make `list_price` read-only when `pairs_per_case` or `price_per_pair` is set. -->
                <xpath expr="//field[@name='list_price']" position="attributes">
                    <attribute name="attrs">{'readonly': ['|', ('pairs_per_case', '!=', 0),
                        ('price_per_pair', '!=', 0.0)]}</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>